
<h1>Listing beers</h1>

<table class="table table-condensed table-hover table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Brewery</th>
    <th>Alcohol</th>
    <th></th>
  </tr>

<% @beers.each do |beer| %>
  <tr>
    <td><%= beer.name %></td>
    <td><%= beer.brewery.name %></td>
    <td><%= beer.alcohol %></td>
    <td>
        <%= link_to(beer, class: "btn btn-small") do %>
          <i class="icon-eye-open"></i> Show
        <% end %>

        <%= link_to(edit_beer_path(beer), class: "btn btn-small") do %>
          <i class="icon-pencil"></i> Edit
        <% end %>

        <%= link_to(beer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small") do %>
            <i class="icon-warning-sign"></i> Destroy
        <% end %>   
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New Beer', new_beer_path, class: "btn btn-primary" %>
