<%= form_for(@beer, :html => { :class => 'form-horizontal'} ) do |f| %>
  <% if @beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
      <% @beer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:name, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:brewery_id, nil, :class => "control-label") %>
    <div class="controls">
      <%= collection_select(:beer, :brewery_id, Brewery.all, :id, :name, :prompt => "Select brewery") %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:alcohol, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :alcohol %>
    </div>
  </div>
   <div class="control-group">
    <div class="controls">
      <%= submit_tag(nil, :class => "btn btn-primary") %>
    </div>
  </div>
<% end %>
