<h1>Listing tastings</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Beer</th>
    <th>User</th>
    <th>Scenthopsflower</th>
    <th>Scentfruit</th>
    <th>Scentmalt</th>
    <th>Foamamout</th>
    <th>Foamcolor</th>
    <th>Foamdensity</th>
    <th>Foamtime</th>
    <th>Clarityclarity</th>
    <th>Clarityprecipitate</th>
    <th>Color</th>
    <th>Tastesweetness</th>
    <th>Tastebitterness</th>
    <th>Tasteaftertaste</th>
    <th>Mouthtemp</th>
    <th>Mouthcarbon</th>
    <th>Mouthfill</th>
    <th>Score</th>
    <th>Coment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tastings.each do |tasting| %>
  <tr>
    <td><%= tasting.date %></td>
    <td><%= tasting.beer.name %></td>
    <td><%= tasting.user.name %></td>
    <td><%= tasting.scentHopsFlower %></td>
    <td><%= tasting.scentFruit %></td>
    <td><%= tasting.scentMalt %></td>
    <td><%= tasting.foamAmout %></td>
    <td><%= tasting.foamColor %></td>
    <td><%= tasting.foamDensity %></td>
    <td><%= tasting.foamTime %></td>
    <td><%= tasting.clarityClarity %></td>
    <td><%= tasting.clarityPrecipitate %></td>
    <td><%= tasting.color %></td>
    <td><%= tasting.tasteSweetness %></td>
    <td><%= tasting.tasteBitterness %></td>
    <td><%= tasting.tasteAftertaste %></td>
    <td><%= tasting.mouthTemp %></td>
    <td><%= tasting.mouthCarbon %></td>
    <td><%= tasting.mouthFill %></td>
    <td><%= tasting.score %></td>
    <td><%= tasting.coment %></td>
    <td><%= link_to 'Show', tasting %></td>
    <td><%= link_to 'Edit', edit_tasting_path(tasting) %></td>
    <td><%= link_to 'Destroy', tasting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

