  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:foamColor, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :foamColor %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:foamDensity, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :foamDensity %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:foamTime, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :foamTime %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:clarityClarity, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :clarityClarity %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:clarityPrecipitate, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :clarityPrecipitate %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag(:color, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :color %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
     <%= label_tag(:tasteSweetness, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :tasteSweetness %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
     <%= label_tag(:tasteBitterness, nil, :class => "control-label") %>
     <div class="controls">
      <%= f.number_field :tasteBitterness %>
