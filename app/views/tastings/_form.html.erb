      <% (1..8).to_a.each do |score| %>
      <label class="radio inline">
        <%= f.radio_button :score, score %>
        <%= score %>
      </label>
    <% end %>
    </div>
  </div>
 
  <div class="control-group">
    <%= label_tag(:comment, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.text_area(:comment , rows: "7", :class => "span6") %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag(nil, :class => "btn btn-primary") %>
    </div>
