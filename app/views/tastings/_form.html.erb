<%= form_for(@tasting, :html => { :class => 'form-horizontal'} ) do |f| %>
  <% if @tasting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tasting.errors.count, "error") %> prohibited this tasting from being saved:</h2>

      <ul>
      <% @tasting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= label_tag(:date, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.date_select :date %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag(:beer_id, nil, :class => "control-label") %>
    <div class="controls">
      <%= collection_select(:tasting, :beer_id, Beer.all, :id, :name, :prompt => "Select beer") %>
    </div>
  </div>

<div class="control-group">
   <%= label_tag(:user_id, nil, :class => "control-label") %>
    <div class="controls">
      <%= collection_select(:tasting, :user_id, User.all, :id, :name_capitalize, :prompt => "Select user") %>
    </div>
</div>

  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:scentHopsFlower, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :scentHopsFlower %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:scentFruit, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :scentFruit %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
    <%= label_tag(:scentMalt, nil, :class => "control-label") %>
    <div class="controls">
      <%= f.number_field :scentMalt %>
    </div>
  </div>
  <div class="control-group">
    <div class="slider"></div>
