<h1>Listing tastes</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Beer</th>
    <th>User</th>
    <th>Scenthopsflower</th>
    <th>Scentfruit</th>
    <th>Scentmalt</th>
    <th>Foamamout</th>
    <th>Foamcolor</th>
    <th>Foamdensity</th>
    <th>Foamtime</th>
    <th>Clarityclarity</th>
    <th>Clarityprecipitate</th>
    <th>Color</th>
    <th>Tastesweetness</th>
    <th>Tastebitterness</th>
    <th>Tasteaftertaste</th>
    <th>Mouthtemp</th>
    <th>Mouthcarbon</th>
    <th>Mouthfill</th>
    <th>Score</th>
    <th>Coment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tastes.each do |taste| %>
  <tr>
    <td><%= taste.date %></td>
    <td><%= taste.beer_id %></td>
    <td><%= taste.user_id %></td>
    <td><%= taste.scentHopsFlower %></td>
    <td><%= taste.scentFruit %></td>
    <td><%= taste.scentMalt %></td>
    <td><%= taste.foamAmout %></td>
    <td><%= taste.foamColor %></td>
    <td><%= taste.foamDensity %></td>
    <td><%= taste.foamTime %></td>
    <td><%= taste.clarityClarity %></td>
    <td><%= taste.clarityPrecipitate %></td>
    <td><%= taste.color %></td>
    <td><%= taste.tasteSweetness %></td>
    <td><%= taste.tasteBitterness %></td>
    <td><%= taste.tasteAftertaste %></td>
    <td><%= taste.mouthTemp %></td>
    <td><%= taste.mouthCarbon %></td>
    <td><%= taste.mouthFill %></td>
    <td><%= taste.score %></td>
    <td><%= taste.coment %></td>
    <td><%= link_to 'Show', taste %></td>
    <td><%= link_to 'Edit', edit_taste_path(taste) %></td>
    <td><%= link_to 'Destroy', taste, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

